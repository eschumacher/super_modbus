#!/bin/bash
# Pre-commit hook to automatically format code with clang-format
# This hook auto-formats files before commit to ensure consistency

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "Running clang-format (auto-formatting staged files)..."

# Get list of staged C++ files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(cpp|hpp|h)$')

if [ -z "$STAGED_FILES" ]; then
  echo -e "${GREEN}No C++ files to format.${NC}"
  exit 0
fi

FORMATTED_FILES=()

for file in $STAGED_FILES; do
  # Skip if file doesn't exist (was deleted)
  if [ ! -f "$file" ]; then
    continue
  fi

  # Check if file needs formatting
  if ! clang-format --dry-run --Werror "$file" >/dev/null 2>&1; then
    # Auto-format the file
    clang-format -i "$file"
    FORMATTED_FILES+=("$file")
    echo -e "${YELLOW}✓ Auto-formatted: $file${NC}"
  fi
done

# Re-stage the formatted files
if [ ${#FORMATTED_FILES[@]} -gt 0 ]; then
  echo ""
  echo -e "${GREEN}Auto-formatted ${#FORMATTED_FILES[@]} file(s). Re-staging...${NC}"
  for file in "${FORMATTED_FILES[@]}"; do
    git add "$file"
  done
  echo -e "${GREEN}✓ All files formatted and re-staged${NC}"
else
  echo -e "${GREEN}✓ All files are already properly formatted${NC}"
fi

exit 0
